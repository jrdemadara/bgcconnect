{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "statement1",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::528757795389:user/jrdemadara"
            },
            "Action": ["s3:GetBucketLocation", "s3:ListBucket"],
            "Resource": ["arn:aws:s3:::bgcconnect"]
        },
        {
            "Sid": "statement2",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::528757795389:user/jrdemadara"
            },
            "Action": ["s3:GetObject"],
            "Resource": ["arn:aws:s3:::bgcconnect/*"]
        },
        {
            "Sid": "PermissionForObjectOperations",
            "Effect": "Allow",
            "Action": ["s3:PutObject"],
            "Resource": ["arn:aws:s3:::bgcconnect/*"]
        }
    ]
}
